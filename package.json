{
  "name": "@moeru-ai/inventory-root",
  "private": true,
  "version": "0.1.3-beta.7",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "pnpm -rF=\"./packages/*\" run build",
    "test": "pnpm -rF=\"./packages/*\" run test",
    "test:run": "pnpm -rF=\"./packages/*\" run test:run",
    "lint": "pnpm -rF=\"./packages/*\" run lint",
    "lint:fix": "pnpm -rF=\"./packages/*\" run lint:fix",
    "typecheck": "pnpm -rF=\"./packages/*\" run --parallel typecheck",
    "up": "taze -w -r -I -f && pnpm prune && pnpm dedupe",
    "fetch-issues": "pnpm -F=\"./packages/issues-fetcher\" run run",
    "jem-validator": "pnpm -F=\"./packages/jem-validator\" run run"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@dotenvx/dotenvx": "^1.45.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "taze": "^19.1.0",
    "tsdown": "^0.12.8",
    "vitest": "^3.2.4"
  }
}
